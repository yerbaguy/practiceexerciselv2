<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



        <TextView
            android:id="@+id/textViewId"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewPracticeExercise"
            android:layout_marginTop="48dp"
            android:padding="3dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewEngWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textViewId"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/textViewId"
            android:layout_toRightOf="@+id/textViewId"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewPlWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewEngWord"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_toEndOf="@+id/textViewEngWord"
            android:layout_toRightOf="@+id/textViewEngWord"
            android:text="TextView" />



</RelativeLayout>